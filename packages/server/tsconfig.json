{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "_dist",
        "target": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "useUnknownInCatchVariables": false,
        "composite": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "**/*",
        "../../globals.d.ts"
    ],
    "exclude": [
        "_dist"
    ],
    "references": [
        {
            "path": "../web"
        }
    ],
}